= render 'layouts/admin_navigation' if spree_current_user && spree_current_user.admin?

.top-infosection.pad-top-10.pad-bottom-5.bg-soft-pink.hide-for-small-only
  .row
    .small-12.columns
      .top-area.margin-bottom-0.text-white.left
        %p 25914 Novi Rd. Novi, MI 48375
      .top-area.margin-bottom-0.text-white.right
        %p= phone_number_link("(248) 305-9190")
.top-infosection.bg-soft-pink.text-center.show-for-small-only
  .top-area.margin-bottom-0.text-white
    %p 25914 Novi Rd. Novi, MI 48375
  .top-area.margin-bottom-0.text-white
    %p= phone_number_link("(248) 305-9190")

.row.top-logo-section.pad-top-20.pad-bottom-25
  .small-12.small-centered.columns.text-center
    = image_tag 'floweralley.png'

.row.light-border-bottom
  %nav.top-bar{"data-topbar" => true}
    %ul.title-area
      %li.name
        = link_to 'Home', root_path
      %li.toggle-topbar.menu-icon
        %a{:href => "#"}
          %i.fa.fa-bars.fa-2x
    .top-bar-section
      %ul
        = render 'layouts/navigation_links'


